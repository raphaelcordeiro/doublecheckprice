<?xml version="1.0"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">double_check_price_listing.double_check_price_listing_data_source
            </item>
            <item name="deps" xsi:type="string">double_check_price_listing.double_check_price_listing_data_source</item>
        </item>
    </argument>
    <settings>
        <spinner>double_check_price_listing_columns</spinner>
        <deps>
            <dep>double_check_price_listing.double_check_price_listing_data_source</dep>
        </deps>
    </settings>
    <dataSource name="double_check_price_listing_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">double_check_price_id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <aclResource>MagentoModules_DoubleCheckPrice::management</aclResource>
        <dataProvider class="MagentoModules\DoubleCheckPrice\Ui\DataProvider\DoubleCheckPriceDataProvider"
                      name="double_check_price_listing_data_source">
            <settings>
                <requestFieldName>double_check_price_id</requestFieldName>
                <primaryFieldName>double_check_price_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top">
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <filterSearch name="fulltext"/>
        <filters name="listing_filters"/>
        <paging name="listing_paging"/>
        <exportButton name="export_button"/>
        <buttons>
            <button name="approve_item">
                <settings>
                    <aclResource>MagentoModules_DoubleCheckPrice::approve</aclResource>
                </settings>
                <url path="*/*/approve"/>
                <class>primary</class>
                <label translate="true">Approve New Price</label>
            </button>
        </buttons>
    </listingToolbar>
    <columns name="double_check_price_listing_columns">
        <column name="double_check_price_id">
            <settings>
                <filter>textRange</filter>
                <label translate="true">ID</label>
                <sorting>desc</sorting>
            </settings>
        </column>
        <column name="attribute">
            <settings>
                <filter>textRange</filter>
                <label translate="true">Attribute</label>
            </settings>
        </column>
        <column name="old_price">
            <settings>
                <filter>textRange</filter>
                <label translate="true">Old Price</label>
            </settings>
        </column>
        <column name="new_price">
            <settings>
                <filter>textRange</filter>
                <label translate="true">New Price</label>
            </settings>
        </column>
        <column name="product_sku">
            <settings>
                <filter>text</filter>
                <label translate="true">Sku</label>
            </settings>
        </column>
        <column name="full_name" class="MagentoModules\DoubleCheckPrice\Ui\Component\Listing\Column\FullName">
            <settings>
                <filter>textRange</filter>
                <label translate="true">Applicant's Name</label>
            </settings>
        </column>
        <column name="status">
            <settings>
                <filter>textRange</filter>
                <label translate="true">Status</label>
            </settings>
        </column>
        <column name="created_at">
            <settings>
                <filter>text</filter>
                <label translate="true">Created At</label>
            </settings>
        </column>
        <column name="updated_at">
            <settings>
                <filter>text</filter>
                <label translate="true">Updated At</label>
            </settings>
        </column>
        <actionsColumn name="actions"
                       class="MagentoModules\DoubleCheckPrice\Ui\Component\Listing\Column\DoubleCheckPriceBlockActions">
            <item name="actions" xsi:type="array">
                <item name="approve" xsi:type="array">
                    <item name="urlPath" xsi:type="string">*/*/massapproval</item>
                    <item name="label" xsi:type="string" translate="true">Mass Approval</item>
                    <item name="type" xsi:type="string">approve</item>
                </item>
            </item>
            <settings>
                <indexField>double_check_price_id</indexField>
            </settings>
        </actionsColumn>
    </columns>
</listing>
